# Use server-provided timestamp
timestamping = on

# Retry when download fails
tries = 3
retry_connrefused = on
waitretry = 5

# Timeout settings
timeout = 60
dns_timeout = 60
connect_timeout = 60
read_timeout = 60

# Follow links
follow_ftp = on
recursive = off

# Show progress bar
progress = bar

# Save with original timestamp
adjust_extension = on

# Continue interrupted downloads
continue = on

# Use the last component of a redirection URL for the local file name
trust_server_names = on

# Add file extensions based on content type
adjust_extension = on

# Prefer IPv4 for stability
prefer-family = IPv4

# Save all files with .html extension
# adjust_extension = on (already defined above)

# Follow robots.txt and meta tags
robots = off

# Required certificates
check_certificate = off

# Save downloads to the current directory
no_parent = on

# Display server response headers for better debugging
server_response = on

# Store HSTS (HTTP Strict Transport Security) database in the cache directory
hsts-file = $HOME/.cache/wget-hsts

# Set default Accept header to receive any content type
header = Accept: */*

# Set language preference to English with fallback options
header = Accept-Language: en-US,en;q=0.8

# Keep connections alive for 300 seconds to improve performance
header = Keep-Alive: 300

# User agent string for requests
user_agent = Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

